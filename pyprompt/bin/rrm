#!/usr/bin/env python

from glob import glob
import subprocess as sub

out = sub.Popen(['ls','-pAR'],stdin=sub.PIPE,stdout=sub.PIPE,stderr=sub.STDOUT)
out = out.stdout.read()

full = []
for line in out.split('\n'):
	if line[-1:]==":":
		if line == '.:':
			full.append('')
		else:
			full.append(line.rstrip(':')[2:]+'/')
for line in full:
	line = line+"*.pyc"
	toDelList = glob(line)
	toDel = ["rm"]
	if len(toDelList) > 0:
		for item in toDelList:
			toDel.append(item)
		sub.Popen(toDel)
